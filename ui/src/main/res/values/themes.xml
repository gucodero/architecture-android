<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ArchitectureAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.AppDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="Theme.AppBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.ArchitectureAndroid">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>